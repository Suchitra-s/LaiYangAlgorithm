<Window x:Class="LaiYang_Algorithm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaiYang_Algorithm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
        <TextBlock Text="Enter the Initial Values of P1 and P2"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="P1" Margin="10"/>
                <TextBox x:Name="processP1" Width="200" Margin="10"></TextBox>
                <TextBlock Text="P2" Margin="10"/>
                <TextBox x:Name="processP2" Width="200" Margin="10"></TextBox>
            </StackPanel>
        </StackPanel>
        <TextBlock Text="Enter the number of Time slots"/>
    </Grid>
</Window>
